                    <!--                        android:hint="Alamat email.."-->
                    <!--                        android:textAlignment="center"-->
                    <!--                        android:textColor="#3F3F3F"-->
                    <!--                        android:textSize="13sp"-->
                    <!--                        app:layout_constraintEnd_toEndOf="@+id/imageView20"-->
                    <!--                        app:layout_constraintStart_toStartOf="@+id/imageView20"-->
                    <!--                        app:layout_constraintTop_toBottomOf="@+id/imageView20"-->
                    <!--                        tools:ignore="MissingConstraints">-->

                    <!--                    </EditText>-->

                    <ImageView
                        android:id="@+id/ivNextpilihanbulan"
                        android:layout_width="313dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="50dp"
                        app:layout_constraintEnd_toEndOf="@+id/iv12bulan"
                        app:layout_constraintStart_toStartOf="@+id/iv12bulan"
                        app:layout_constraintTop_toBottomOf="@+id/iv12bulan"
                        app:srcCompat="@drawable/selanjutnya" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>