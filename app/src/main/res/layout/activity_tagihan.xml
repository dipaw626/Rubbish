<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3EBAA1"
    tools:context=".Splash.SplashActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Tagihan"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivbacktagihan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivbacktagihan" />

            <ImageView
                android:id="@+id/ivbacktagihan"
                android:layout_width="34dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Rp 180.000"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Metode Pembayaran"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />


            <!--            <androidx.cardview.widget.CardView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="10dp"-->
            <!--                android:layout_marginTop="16dp"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/textView15"-->
            <!--                tools:layout_editor_absoluteX="0dp">-->

            <!--            </androidx.cardview.widget.CardView>-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/QRIS"
                        android:layout_width="245dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image4" />

                    <ImageView
                        android:id="@+id/atmbersama"
                        android:layout_width="245dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/QRIS"
                        app:layout_constraintStart_toStartOf="@+id/QRIS"
                        app:layout_constraintTop_toBottomOf="@+id/QRIS"
                        app:srcCompat="@drawable/image5" />

                    <ImageView
                        android:id="@+id/INDOMARET"
                        android:layout_width="245dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/atmbersama"
                        app:layout_constraintStart_toStartOf="@+id/atmbersama"
                        app:layout_constraintTop_toBottomOf="@+id/atmbersama"
                        app:srcCompat="@drawable/image6" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="216dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/et_bg"
                        android:gravity="center"
                        android:hint="Alamat email.."
                        android:textColor="#3F3F3F"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/INDOMARET"
                        app:layout_constraintStart_toStartOf="@+id/INDOMARET"
                        app:layout_constraintTop_toBottomOf="@+id/INDOMARET"
                        tools:ignore="MissingConstraints">

                    </EditText>

                    <Button
                        android:id="@+id/pesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#3EBAA1"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Bayar"
                        android:textColorHint="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email"
                        tools:ignore="MissingConstraints" />

                    <!--                    <ImageView-->
                    <!--                        android:id="@+id/imageView22"-->
                    <!--                        android:layout_width="313dp"-->
                    <!--                        android:layout_height="44dp"-->
                    <!--                        android:layout_marginTop="50dp"-->
                    <!--                        app:layout_constraintEnd_toEndOf="@+id/email"-->
                    <!--                        app:layout_constraintStart_toStartOf="@+id/email"-->
                    <!--                        app:layout_constraintTop_toBottomOf="@+id/email"-->
                    <!--                        app:srcCompat="@drawable/image7" />-->

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>